<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoder的默认实现类是ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{5} -
				%msg%n</pattern>
		</encoder>
	</appender>

	<appender name="pv"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/Users/xieyunchao/Workspaces/ws-sts/pv.log.%d{yyyy-MM-dd}
			</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>Time=%d{yyyy-MM-dd HH:mm:ss},%msg%n</pattern>
		</encoder>
		<append>true</append>
		<prudent>false</prudent>
	</appender>
 
 

	<logger name="pvtype" level="INFO">
		<appender-ref ref="pv" />
	</logger>
	 

	<logger name="org.mybatis">
		<level value="DEBUG" />
	</logger>

	<logger name="java.sql">
		<level value="DEBUG" />
	</logger>

	<logger name="java.sql">
		<level value="debug" />
	</logger>

	<!-- root的默认level是DEBUG -->
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
